<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_waiter_show_set"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:textColor="@color/primary_text"
      android:textSize="@dimen/text_font_size_normal"
      android:text="就餐人数"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_waiter_show_set"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@mipmap/ic_people_induce"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/primary_text"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/text_font_size_big"
        android:text="0"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/primary_text"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@mipmap/ic_people_add"
        />
  </LinearLayout>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/primary_text"
      android:textSize="@dimen/text_font_size_normal"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="30dp"
      android:text="服务员"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/bg_waiter_show_set"
      >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/text_font_size_big"
        android:text="服务员"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/primary_text"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_right_arrow"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="35dp"
      >
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_cancel_btn"
        android:textColor="@color/white"
        android:text="取消"
        />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sure_btn"
        android:textColor="@color/white"
        android:text="确定"
        />
  </LinearLayout>
</LinearLayout>