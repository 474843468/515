<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/gray_dark"
    >
  <RelativeLayout
      android:id="@+id/view_content"
      android:layout_width="135dp"
      android:layout_height="135dp"
      >
    <TextView
        android:id="@+id/tv_table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_size_big"
        android:layout_marginTop="5dp"
        android:text="一号桌"
        />
    <TextView
        android:id="@+id/tv_suggest_people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_font_size_normal"
        android:layout_toRightOf="@+id/tv_table_name"
        android:layout_marginTop="5dp"
        android:text="0/0"
        />
    <ImageView
        android:id="@+id/iv_start_table"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_below="@+id/tv_table_name"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_add"
        />
    <LinearLayout
        android:id="@+id/ll_start_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tv_table_name"
        android:background="@drawable/bg_table_start_btn"
        android:padding="10dp"
        android:gravity="center"
        android:visibility="gone"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/primary_text"
          android:text="开台"
          />
    </LinearLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>


