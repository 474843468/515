<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/item_occupy_table_container_status_normal"
    >
  <RelativeLayout
      android:id="@+id/view_content"
      android:layout_width="135dp"
      android:layout_height="135dp"
      >
    <TextView
        android:id="@+id/tv_table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_size_big"
        android:layout_marginTop="5dp"
        android:text="一号桌"
        />
    <TextView
        android:id="@+id/tv_people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_font_size_normal"
        android:layout_toRightOf="@+id/tv_table_name"
        android:layout_marginTop="5dp"
        android:text="0/0"
        />
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_table_name"
        android:textSize="@dimen/text_font_size_normal"
        android:layout_marginTop="5dp"
        android:text="0"
        />
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_num"
        android:textSize="@dimen/text_font_size_normal"
        android:layout_marginTop="5dp"
        android:text="0h0m"
        />
  </RelativeLayout>
</android.support.v7.widget.CardView>


